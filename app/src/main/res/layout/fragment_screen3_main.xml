<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen3Main">

    <TextView
        android:id="@+id/add_your_kindergarten"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:text="@string/not_chosen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_my_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/add_your_kindergarten"
        app:layout_constraintStart_toStartOf="@id/add_your_kindergarten"
        app:layout_constraintTop_toBottomOf="@id/add_your_kindergarten"
        app:layout_constraintEnd_toEndOf="@id/add_your_kindergarten" />

    <TextView
        android:id="@+id/add_replacement_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:text="@string/not_chosen"
        app:layout_constraintStart_toStartOf="@id/add_your_kindergarten"
        app:layout_constraintTop_toBottomOf="@id/button_my_address"
        app:layout_constraintEnd_toEndOf="@id/add_your_kindergarten" />

    <Button
        android:id="@+id/button_add_replacement_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/add_address_for_replace"
        app:layout_constraintStart_toStartOf="@id/add_your_kindergarten"
        app:layout_constraintTop_toBottomOf="@id/add_replacement_address"
        app:layout_constraintEnd_toEndOf="@id/add_your_kindergarten" />

</androidx.constraintlayout.widget.ConstraintLayout>